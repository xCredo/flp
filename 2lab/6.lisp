(defun onion (n x)
  (if (<= n 0)       ; Базовый случай: если уровень вложенности равен 0
      x              ; Возвращаем сам элемент x
      (list (onion (- n 1) x)))) ; Рекурсивно оборачиваем элемент x в список

;; Пример использования
(format t "Результат onion для n=4, x='*: ~a~%" (onion 4 '*))
